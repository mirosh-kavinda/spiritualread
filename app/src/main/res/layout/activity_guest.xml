<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="me.mirosh.spiritualread.Dashboards.Guest"
    android:background="@drawable/bg_splash_gradient"
  >
    <!--    Toolbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_toolbar02"
        android:id="@+id/toolbarRl"
        >

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"

            android:background="@android:color/transparent"
            android:contentDescription="Back button"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:text="Dashboard Guest"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/md_white_1000"
            />



    </RelativeLayout>

    <!--Tabs-->
    <com.google.android.material.tabs.TabLayout

        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarRl"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        app:tabBackground="@drawable/tab_selector"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"
        app:tabUnboundedRipple="false"
        app:tabGravity="center"/>

    <TextView
        android:id="@+id/guestText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabLayout"
        android:layout_marginTop="6dp"
        android:background="@color/md_white_1000"
        android:padding="10dp"
        android:text="You Can view more Books, if you Loged in to the App"
        android:textAlignment="center"
        android:textColor="@color/md_black_1000"
        android:textSize="15sp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/guestText"
        android:layout_marginTop="0dp" />


</RelativeLayout>