<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Spiritualread"
        >
    </style>

    <style name="AppTheme.NoActionBar">


        <item name="android:textColorAlertDialogListItem">@color/md_black_1000</item>
<item name="materialAlertDialogTitleTextStyle">@color/md_black_1000</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="colorPrimary">@color/md_black_1000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#134D58</item>

        <!--  It should be true otherwise action mode will not overlay toolbar -->
        <item name="windowActionModeOverlay">true</item>

        <!--  For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/md_black_1000</item>
    </style>



</resources>
